<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @lovesex.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @lovesex.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @lovesex.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @lovesex.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="lovesex[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="lovesex[polish]" name="lovesex[polish]" value="<%= @lovesex.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="lovesex[english]" class="fieldLabel">English</label>
            <input type="text" id="lovesex[english]" name="lovesex[english]" value="<%= @lovesex.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="lovesex[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="lovesex[permalink]" name="lovesex[permalink]" value="<%= @lovesex.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
