<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @timex.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @timex.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @timex.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @timex.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="timex[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="timex[polish]" name="timex[polish]" value="<%= @timex.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="timex[english]" class="fieldLabel">English</label>
            <input type="text" id="timex[english]" name="timex[english]" value="<%= @timex.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="timex[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="timex[permalink]" name="timex[permalink]" value="<%= @timex.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
