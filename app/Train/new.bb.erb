<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Train</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @train.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Polish: </td>
                <td class="itemValue"><input type="text" name="train[polish]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">English: </td>
                <td class="itemValue"><input type="text" name="train[english]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Permalink: </td>
                <td class="itemValue"><input type="text" name="train[permalink]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
