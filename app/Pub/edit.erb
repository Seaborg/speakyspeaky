<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @pub.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @pub.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @pub.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @pub.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="pub[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="pub[polish]" name="pub[polish]" value="<%= @pub.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pub[english]" class="fieldLabel">English</label>
            <input type="text" id="pub[english]" name="pub[english]" value="<%= @pub.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pub[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="pub[permalink]" name="pub[permalink]" value="<%= @pub.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
