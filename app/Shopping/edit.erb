<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @shopping.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @shopping.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @shopping.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @shopping.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="shopping[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="shopping[polish]" name="shopping[polish]" value="<%= @shopping.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="shopping[english]" class="fieldLabel">English</label>
            <input type="text" id="shopping[english]" name="shopping[english]" value="<%= @shopping.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="shopping[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="shopping[permalink]" name="shopping[permalink]" value="<%= @shopping.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
