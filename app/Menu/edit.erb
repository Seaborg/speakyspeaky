<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @menu.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @menu.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @menu.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @menu.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="menu[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="menu[polish]" name="menu[polish]" value="<%= @menu.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="menu[english]" class="fieldLabel">English</label>
            <input type="text" id="menu[english]" name="menu[english]" value="<%= @menu.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="menu[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="menu[permalink]" name="menu[permalink]" value="<%= @menu.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
