<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @manner.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @manner.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @manner.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @manner.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="manner[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="manner[polish]" name="manner[polish]" value="<%= @manner.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="manner[english]" class="fieldLabel">English</label>
            <input type="text" id="manner[english]" name="manner[english]" value="<%= @manner.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="manner[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="manner[permalink]" name="manner[permalink]" value="<%= @manner.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
