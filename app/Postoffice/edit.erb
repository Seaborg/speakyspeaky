<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @postoffice.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @postoffice.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @postoffice.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @postoffice.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="postoffice[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="postoffice[polish]" name="postoffice[polish]" value="<%= @postoffice.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="postoffice[english]" class="fieldLabel">English</label>
            <input type="text" id="postoffice[english]" name="postoffice[english]" value="<%= @postoffice.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="postoffice[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="postoffice[permalink]" name="postoffice[permalink]" value="<%= @postoffice.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
