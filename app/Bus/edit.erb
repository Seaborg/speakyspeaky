<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @bus.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @bus.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @bus.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @bus.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="bus[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="bus[polish]" name="bus[polish]" value="<%= @bus.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bus[english]" class="fieldLabel">English</label>
            <input type="text" id="bus[english]" name="bus[english]" value="<%= @bus.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bus[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="bus[permalink]" name="bus[permalink]" value="<%= @bus.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
