<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @restaurant.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @restaurant.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @restaurant.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @restaurant.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="restaurant[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="restaurant[polish]" name="restaurant[polish]" value="<%= @restaurant.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="restaurant[english]" class="fieldLabel">English</label>
            <input type="text" id="restaurant[english]" name="restaurant[english]" value="<%= @restaurant.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="restaurant[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="restaurant[permalink]" name="restaurant[permalink]" value="<%= @restaurant.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
