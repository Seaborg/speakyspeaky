<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @restaurant.object %>
    <h1>Edit <%= @restaurant.polish%></h1>
    <%= link_to "Delete", :action => :delete, :id => @restaurant.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @restaurant.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Polish: </td>
              <td class="itemValue"><input type="text" name="restaurant[polish]" value="<%= @restaurant.polish %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">English: </td>
              <td class="itemValue"><input type="text" name="restaurant[english]" value="<%= @restaurant.english %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Permalink: </td>
              <td class="itemValue"><input type="text" name="restaurant[permalink]" value="<%= @restaurant.permalink %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
