<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @emergency.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @emergency.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @emergency.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @emergency.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="emergency[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="emergency[polish]" name="emergency[polish]" value="<%= @emergency.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[english]" class="fieldLabel">English</label>
            <input type="text" id="emergency[english]" name="emergency[english]" value="<%= @emergency.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emergency[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="emergency[permalink]" name="emergency[permalink]" value="<%= @emergency.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
