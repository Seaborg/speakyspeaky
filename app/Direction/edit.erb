<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @direction.polish %></h1>
    <a href="<%= url_for :action => :show, :id => @direction.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @direction.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @direction.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="direction[polish]" class="fieldLabel">Polish</label>
            <input type="text" id="direction[polish]" name="direction[polish]" value="<%= @direction.polish %>" <%= placeholder( "Polish" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="direction[english]" class="fieldLabel">English</label>
            <input type="text" id="direction[english]" name="direction[english]" value="<%= @direction.english %>" <%= placeholder( "English" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="direction[permalink]" class="fieldLabel">Permalink</label>
            <input type="text" id="direction[permalink]" name="direction[permalink]" value="<%= @direction.permalink %>" <%= placeholder( "Permalink" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
