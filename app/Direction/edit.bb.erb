<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @direction.object %>
    <h1>Edit <%= @direction.polish%></h1>
    <%= link_to "Delete", :action => :delete, :id => @direction.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @direction.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Polish: </td>
              <td class="itemValue"><input type="text" name="direction[polish]" value="<%= @direction.polish %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">English: </td>
              <td class="itemValue"><input type="text" name="direction[english]" value="<%= @direction.english %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Permalink: </td>
              <td class="itemValue"><input type="text" name="direction[permalink]" value="<%= @direction.permalink %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
